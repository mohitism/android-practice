<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Clip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/butto1"
        android:layout_marginBottom="50dp"/>

    <Button
        android:text="Clip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/butto2"
        android:layout_marginBottom="50dp"/>

    <Button
        android:text="Clip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/butto3" />


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal" android:layout_width="match_parent"
android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">


        <Button
            android:text="Start Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/butto4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp" />

        <Button
            android:text="Stop Play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/butto5"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/butto4"
            android:layout_toEndOf="@+id/butto4"
            android:layout_marginLeft="68dp"
            android:layout_marginStart="68dp" />
    </RelativeLayout>
</LinearLayout>
</LinearLayout>